PFont f;
float angle = 0;


void setup() {
  size(600, 400);
  f = createFont("휴먼명조", 16);
}

void draw() {
  background(255);
  smooth();
  textFont(f, 10);
  fill(255, 0, 0);
  translate(width/2, height/2);
  rotate(angle);
 text("0000000000000000000000000", 0, 0);
 
  rotate(angle);
  ellipse(28, 150, 69, 12);
  textAlign(CENTER);
  rotate(angle);
  text("----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------" , 0, 0);
  angle += 0.05;
  

}
